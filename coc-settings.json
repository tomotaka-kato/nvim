{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"],
            "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    },

    "diagnostic.errorSign": "✖",
    "diagnostic.infoSign": "ⓘ",
    "diagnostic.hintSign": "💡",
    // "diagnostic.signOffset": 250,
    // "diagnostic.displayByAle": true,
    "suggest.snippetIndicator": "►",

    "coc.preferences.formatOnType": true,

    // "coc.source.OmniSharp.enable": true,
    // "coc.source.OmniSharp.triggerCharacters": ".",

    "eslint.filetypes": ["javascript", "typescript", "vue"],
    "eslint.autoFixOnSave": true,

    "coc.preferences.formatOnSaveFiletypes": [
        "html",
        "javascript",
        "typescript",
        "javascriptreact",
        "typescriptreact",
        "json",
        "css",
        "scss",
        // "vue",
        // "markdown", prettierが勝手にアルファベットと日本語の間にスペースを入れるのでコメントアウト。
        "yaml",
        "python"
    ],

    "prettier.singleQuote": true,
    "prettier.tabWidth": 4,
    "python.linting.lintOnSave": true,
    "python.analysis.autoSearchPaths": true,
    "python.analysis.useLibraryCodeForTypes": true,

    "vetur.useWorkspaceDependencies": true, // typescriptの設定?
    // "vetur.validation.style": false,
    // "vetur.validation.script": false,
    // "vetur.validation.template": false,

    "go.goplsOptions": {
        "completeUnimported": true
    }
}
